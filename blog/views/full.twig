{% extends "layout.twig" %}

{% block content %}
    
        <div class="blog-post">
            <p>
                <a class="btn" href="{{ '' | url }}">Back</a>
            </p>
            <h2>{{ blogPost.title }}</h2>
            <p>Jan 1, 2020 by <a href="">Alex</a></p>
            {% if blogPost.img_url %}
                <div class="blog-post-image">
                        <img src="{{ blogPost.img_url }}" alt="">
                </div>
            {% endif %}
            <div class="blog-post-content">                            
                {{ blogPost.content }}
            </div>            
        </div>
    
{% endblock %}
